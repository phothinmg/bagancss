{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "esnext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}
