{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./out",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ES6",
    "declaration": true,
    "strict": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}
